@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.TypeOfGenre</li>
    <li>Release Date: @Model.ReleaseDate.ToString("dddd, MMMM d, yyyy")</</li>
    <li>Date Added: @Model.DateAdded.ToString("dddd, MMMM d, yyyy")</</li>
    <li>Numeber in Stock: @Model.numberInStock</li>
</ul>

